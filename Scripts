########### Criando um script para marcar entrevistas ################

#!/bin/bash

echo " Tem quantos anos  de experiencia como pentester?"
read anos
if [ "anos" < "1"]
then 
        "volte quando tiver mais tempo na áres"
else
        "Vou agendar sua entrevista"
fi

